# ==============================================
# DIRAY CENTRE - Environment Variables Template
# ==============================================
# Copy this file to .env and fill in the values

# Django Settings
SECRET_KEY=your-super-secret-django-key-here
DEBUG=False
ALLOWED_HOSTS=diray.ma,www.diray.ma,localhost

# Database (PostgreSQL on Railway)
# Railway provides DATABASE_URL automatically
DATABASE_URL=postgresql://user:password@host:5432/database

# Or individual settings (if not using DATABASE_URL)
# PGDATABASE=railway
# PGUSER=postgres
# PGPASSWORD=your-password
# PGHOST=your-host.railway.app
# PGPORT=5432

# ==============================================
# SYSTÈME DE CALCUL API INTEGRATION
# ==============================================
# These settings connect Diray Centre to the main application

# API URL - The base URL of Système de Calcul API
# Example: https://your-app.railway.app/api
SYSTEME_CALCUL_API_URL=https://your-systeme-calcul-app.railway.app/api

# API Key - Shared secret for authentication
# Must match DIRAY_API_KEY in Système de Calcul's environment
SYSTEME_CALCUL_API_KEY=your-secure-api-key-here

# API Timeout in seconds (default: 30)
SYSTEME_CALCUL_API_TIMEOUT=30

# ==============================================
# EMAIL SETTINGS (Optional)
# ==============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# ==============================================
# CELERY/REDIS (Optional - for async tasks)
# ==============================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ==============================================
# SECURITY SETTINGS (Production)
# ==============================================
# Uncomment these for production
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
